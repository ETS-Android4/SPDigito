<!DOCTYPE html>
<html>
  <%- include partials/head.ejs %>
  <body>
    <%- include partials/navbar.ejs %>
    <div class="container">
      <div class="form-container">
        <form class="border border-info" method="post" action="/confirm">
          <!-- Patient Info -->
          <%- include partials/patientedit.ejs %>

          <!-- Upload image -->
          <div class="result-icon float-right">
            <i
              class="fas fa-image"
              data-toggle="popover"
              data-placement="right"
              data-img="<%= imagefile %>"
            ></i>
          </div>

          <!-- Result -->
          <%- include partials/resultedit.ejs %>

          <!-- Button -->
          <div class="form-group">
            <span class="text-left">
              <a href="/" class="btn btn-outline-danger" role="button">
                <i class="fas fa-times"></i>
              </a>
            </span>
            <div class="float-right">
              <button type="submit" class="btn btn-outline-success">
                <i class="fas fa-check"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
