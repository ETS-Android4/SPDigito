<div class="form-row">
  <div class="form-group col-sm-4 col-md-4 col-lg-4">
    <label for="sys">SYS</label>
    <input
      type="text"
      class="form-control"
      name="sys"
      value="<%= result.sys %>"
      pattern="[0-9]{1,3}"
      title="1-3 digits"
      maxlength="3"
      required
    />
  </div>
  <div class="form-group col-sm-4 col-md-4 col-lg-4">
    <label for="dia">DIA</label>
    <input
      type="text"
      class="form-control"
      name="dia"
      value="<%= result.dia %>"
      pattern="[0-9]{1,3}"
      title="1-3 digits"
      maxlength="3"
      required
    />
  </div>
  <div class="form-group col-sm-4 col-md-4 col-lg-4">
    <label for="pulse">PULSE</label>
    <input
      type="text"
      class="form-control"
      name="pulse"
      value="<%= result.pulse %>"
      pattern="[0-9]{1,3}"
      title="1-3 digits"
      maxlength="3"
      required
    />
  </div>
</div>
