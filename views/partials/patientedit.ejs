<!-- Patient image -->
<div class="pimg">
  <i class="fas fa-user-circle fa-7x"></i>
</div>
<!-- Patient ID -->
<div class="form-group">
  <label for="pid">Patient ID</label>
  <input
    type="text"
    class="form-control"
    name="pid"
    value="<%= pid %>"
    pattern="(?:hr|HR)[0-9]{3}"
    title="eg. HR123"
    maxlength="5"
    placeholder="hrxxx"
    required
  />
</div>
<!-- Patient Name -->
<div class="form-group">
  <label for="fname">Full Name</label>
  <input
    type="text"
    class="form-control"
    name="fname"
    value="<%= pinfo.name %>"
    readonly
  />
</div>
<!-- Patient Address -->
<div class="form-group">
  <label for="address">Address</label>
  <textarea class="form-control" name="address" readonly>
<%= pinfo.street %> <%= pinfo.city %>
<%= pinfo.country %> <%= pinfo.zipcode %></textarea
  >
</div>
